{
  "name": "dexie-batch",
  "version": "0.4.2",
  "description": "Fetch DB entries in batches to improve performance while respecting IPC size constraints",
  "license": "MIT",
  "author": "Raphael von der GrÃ¼n",
  "main": "dist/dexie-batch.js",
  "module": "dist/dexie-batch.mjs",
  "repository": "raphinesse/dexie-batch",
  "scripts": {
    "prebuild": "npm test",
    "build": "npm run bundle && npm run minify",
    "bundle": "rollup -c",
    "postbundle": "TEST_SUBJECT=dist/dexie-batch.js ava",
    "format": "prettier --ignore-path .gitignore --write '**/*.js'",
    "minify": "cujs dist/dexie-batch.js",
    "postminify": "TEST_SUBJECT=dist/dexie-batch.min.js ava",
    "prepublishOnly": "npm run build",
    "test": "xo && nyc ava"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "import/no-anonymous-default-export": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "ava": "^1.4.1",
    "cujs": "^0.2.1",
    "dexie": "^2.0.4",
    "fake-indexeddb": "^3.1.2",
    "nyc": "^15.1.0",
    "rollup": "^2.40.0",
    "uglify-es": "^3.3.9",
    "xo": "^0.38.2"
  },
  "peerDependencies": {
    "dexie": ">1.3.6"
  },
  "keywords": [
    "batch",
    "bulk",
    "dexie",
    "fetch",
    "get"
  ]
}
