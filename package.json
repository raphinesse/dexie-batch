{
  "name": "dexie-batch",
  "version": "0.4.3",
  "description": "Fetch DB entries in batches to improve performance while respecting IPC size constraints",
  "license": "MIT",
  "author": "Raphael von der GrÃ¼n",
  "main": "dist/dexie-batch.js",
  "module": "dist/dexie-batch.mjs",
  "types": "dist/dexie-batch.d.ts",
  "repository": "raphinesse/dexie-batch",
  "scripts": {
    "prebuild": "npm test",
    "build": "rollup -c",
    "postbuild": "npm run postbuild:fixdts && npm run postbuild:test",
    "postbuild:fixdts": "sed -i 's/export default/export =/' dist/dexie-batch.d.ts",
    "postbuild:test": "set -e; for f in dist/*.js; do echo $f; TEST_SUBJECT=$f ava; done",
    "prepack": "rm -rf dist && npm run build",
    "test": "xo && nyc ava"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "./test/_setup-ts-node"
    ]
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/promise-function-async": "off",
      "import/no-anonymous-default-export": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "ava": "^3.15.0",
    "dexie": "^3.0.3",
    "fake-indexeddb": "^3.1.2",
    "nyc": "^15.1.0",
    "rollup": "^2.40.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "xo": "^0.38.2"
  },
  "peerDependencies": {
    "dexie": ">1.3.6"
  },
  "keywords": [
    "batch",
    "bulk",
    "dexie",
    "fetch",
    "get"
  ]
}
