{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "ES6",
    "declaration": true,

    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "types": ["node"],

    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
  },

  "exclude": ["dist", "node_modules"]
}
